<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:contentDescription="LOGO"
            android:src="@drawable/logo"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@drawable/rounded_dialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Thank you for booking our services"
                android:textAllCaps="true"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp"
                android:fontFamily="@font/bellerose"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Booking Information"
                android:textAllCaps="true"
                android:fontFamily="@font/bellerose"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_event_note_black_24dp"
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_booking_time_text"
                    android:text="19h00 at 28/03/2019"
                    android:textSize="16sp"
                    android:layout_marginLeft="4dp"
                    android:fontFamily="@font/bellerose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_account_circle_black_24dp"
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_booking_barber_text"
                    android:text="Paul"
                    android:textSize="16sp"
                    android:layout_marginLeft="4dp"
                    android:fontFamily="@font/bellerose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:layout_marginTop="4dp"
                android:background="@android:color/background_dark"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/txt_salon_name"
                android:text="Salon #1"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:fontFamily="@font/bellerose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_web_black_24dp"
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_salon_website"
                    android:text="www.salon.com"
                    android:textSize="16sp"
                    android:layout_marginLeft="4dp"
                    android:fontFamily="@font/bellerose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_local_phone_black_24dp"
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_salon_phone"
                    android:text="+2348134211127"
                    android:textSize="16sp"
                    android:layout_marginLeft="4dp"
                    android:fontFamily="@font/bellerose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_access_time_black_24dp"
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_salon_open_hours"
                    android:text="09h00 - 19h00"
                    android:textSize="16sp"
                    android:layout_marginLeft="4dp"
                    android:fontFamily="@font/bellerose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_location_on_black_24dp"
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_salon_address"
                    android:text="Address of Salon #1"
                    android:textSize="16sp"
                    android:layout_marginLeft="4dp"
                    android:fontFamily="@font/bellerose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_confirm"
                android:text="CONFIRM"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/bellerose"
                android:background="@color/colorButton"
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>

